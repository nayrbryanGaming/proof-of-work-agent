# ============================================================
# PROOF-OF-WORK AGENT - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================================
# Colosseum API Configuration
# ============================================================
COLOSSEUM_API_KEY=your_colosseum_api_key_here
COLOSSEUM_BASE_URL=https://colosseum.com/api

# ============================================================
# OpenAI Configuration
# ============================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# ============================================================
# AgentWallet Configuration
# ============================================================
# Can be:
# - Base58 encoded 64-byte secret key
# - JSON array of bytes: [1,2,3,...]
# - Path to keypair file: ~/.config/solana/id.json
AGENTWALLET_SESSION=your_agentwallet_session_token_here

# ============================================================
# Solana Configuration
# ============================================================
SOLANA_RPC=https://api.devnet.solana.com
# Program ID from: anchor deploy
PROGRAM_ID=your_deployed_program_id_here
# Optional: Bounty ID to use (default: 1)
BOUNTY_ID=1

# ============================================================
# Agent Configuration
# ============================================================
HEARTBEAT_URL=https://colosseum.com/heartbeat.md
# Loop interval in seconds (default: 1800 = 30 minutes)
LOOP_INTERVAL_SECONDS=1800
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================================
# API Server Configuration (for dashboard)
# ============================================================
API_HOST=0.0.0.0
API_PORT=8000
# Enable auto-reload for development
API_RELOAD=false
# Frontend URL for CORS (optional)
FRONTEND_URL=http://localhost:3000
